{
  "name": "web-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "pnpm -w -r dev",
    "build": "pnpm -w -r build",
    "bootstrap": "pnpm -w install",
    "lint": "pnpm -w -r lint",
    "format": "pnpm exec -- prettier --write .",
    "format:check": "pnpm exec -- prettier --check .",
    "prepare": "pnpm -w exec husky install",
    "preview": "pnpm --filter ./packages/home preview",
    "start": "pnpm -w -r dev",
    "lint-staged": "lint-staged",
    "husky:normalize": "./scripts/normalize-husky-hooks.sh"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,json,html}": [
      "pnpm exec -- prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "9.1.7",
    "prettier": "3.7.4",
    "lint-staged": "^14.0.0"
  }
}
